<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyou.library.xh.user.dao.RoleDao">

	<resultMap type="Role" id="roleMap">
		<id property="roleId" column="role_id"></id>
		<result property="roleName" column="role_name"></result>
		<result property="roleDesc" column="role_desc"></result>
	</resultMap>
	
	<insert id="addRole" parameterType="Role">
		insert into t_role(role_name) values(#{roleName})
	</insert>
	
	<update id="updateRole" parameterType="Role">
		update t_role 
		<set>
			<if test="roleName!=null">role_name=#{roleName},</if>
			<if test="roleDesc!=null">role_desc=#{roleDesc}</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<select id="getRoleList" resultMap="roleMap" parameterType="Role">
		select role_id,role_name,role_desc from t_role
	</select>
	
	<select id="getRolePageList" resultMap="roleMap" parameterType="java.util.Map">
		select role_id,role_name,role_desc from t_role limit #{pageIndex},#{pageSize}
	</select>
	
	<select id="getAllCount" resultType="Integer">
		select count(*) from t_role
	</select>
	
	<select id="getRoleById" resultMap="roleMap" parameterType="java.lang.Integer">
		select role_id,role_name,role_desc from t_role where role_id = #{id}
	</select>
	
	<delete id="delRole" parameterType="list" >
		delete from t_role where 
		role_id in
		<foreach collection="list" item="id"  open="(" separator="," close=")">
			 #{id}
		</foreach>
	</delete>
	
</mapper>